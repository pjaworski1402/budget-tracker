generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  currency  String   @default("PLN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions        Session[]
  budgetPlans     BudgetPlan[]
  savingsAccounts SavingsAccount[]
  payments        Payment[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model BudgetPlan {
  id          String   @id @default(cuid())
  userId      String
  category    String
  monthlyAmount Decimal @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@map("budget_plans")
}

model SavingsAccount {
  id              String   @id @default(cuid())
  userId          String
  name            String
  type            String
  balance         Decimal  @db.Decimal(10, 2) @default(0)
  interestRate    Decimal? @db.Decimal(5, 2)
  interestFrequency String? // daily, monthly, yearly
  targetAmount    Decimal? @db.Decimal(10, 2)
  maturityDate    DateTime? // dla obligacji
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("savings_accounts")
}

model Payment {
  id          String   @id @default(cuid())
  userId      String
  budgetPlanId String?
  category    String
  amount      Decimal  @db.Decimal(10, 2)
  paymentDate DateTime
  type        String   // recurring, one-time, custom
  frequency   String?  // weekly, monthly (dla recurring)
  dayOfWeek   Int?     // 0-6 (dla weekly)
  dayOfMonth  Int?     // 1-31 (dla monthly)
  customDates String?  // JSON array of dates (dla custom)
  isPaid      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  budgetPlan BudgetPlan? @relation(fields: [budgetPlanId], references: [id], onDelete: SetNull)

  @@map("payments")
}
